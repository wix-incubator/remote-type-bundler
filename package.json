  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/node-fetch": "^2.6.1",
    "@types/resolve": "^1.20.1",
    "babel-jest": "^27.5.1",
    "esbuild": "^0.14.27",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0"
